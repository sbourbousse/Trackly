{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Tests E2E Playwright pour Trackly",
  "scripts": {
    "test:business": "cd ../frontend-business && npx playwright test",
    "test:driver": "cd ../frontend-driver && npx playwright test",
    "test:tracking": "cd ../frontend-tracking && npx playwright test",
    "test:all": "npm run test:business && npm run test:driver && npm run test:tracking",
    "test:ui:business": "cd ../frontend-business && npx playwright test --ui",
    "test:ui:driver": "cd ../frontend-driver && npx playwright test --ui",
    "test:ui:tracking": "cd ../frontend-tracking && npx playwright test --ui",
    "install:browsers": "npx playwright install",
    "report:business": "cd ../frontend-business && npx playwright show-report",
    "report:driver": "cd ../frontend-driver && npx playwright show-report",
    "report:tracking": "cd ../frontend-tracking && npx playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0"
  }
}
